@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MusicGenMVC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .toolbar { position: sticky; top: 0; z-index: 1000; background: #fff; padding: 0.5rem; border-bottom: 1px solid #eee; }
        .song-card { width: 260px; }
        .cover { width: 100%; height: 260px; object-fit: cover; }
        .lyrics { max-height: 160px; overflow:auto; border:1px solid #eee; padding:.5rem; }
    </style>
</head>
<body>
    <div class="container-fluid p-3">
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>